{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/indent": [
            "error",
            2
        ],
        "semi": "off",
        "@typescript-eslint/semi": [
            "error"
        ],
        "brace-style": "off",
        "@typescript-eslint/brace-style": [
            "error"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "keyword-spacing": "off",
        "@typescript-eslint/keyword-spacing": [
            "error"
        ],
        "padded-blocks": [
            "error",
            "never"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "space-before-blocks": "error",
        "quotes": [
            "error",
            "single"
        ],
        "no-trailing-spaces": "error",
        "eol-last": [
            "error",
            "always"
        ],
        "comma-spacing": "error",
        "space-infix-ops": [
            "error",
            {
                "int32Hint": false
            }
        ],
        "@typescript-eslint/type-annotation-spacing": [
            "error",
            {
                "before": false,
                "after": true,
                "overrides": {
                    "arrow": {
                        "before": true,
                        "after": true
                    }
                }
            }
        ],
        "@typescript-eslint/member-delimiter-style": [
            "error",
            {
                "multiline": {
                    "delimiter": "semi",
                    "requireLast": true
                }
            }
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ],
        "key-spacing": [
            "error",
            {
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "semi-spacing": "error",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-non-null-assertion": "off"
    },
    "ignorePatterns": [
        "node_modules/**/*",
        "dist/"
    ]
}